%h1 Standard Skill Judging Sheet - Writing Judge
%hr
- registrant = @standard_skill_routine.registrant
%h2 #{registrant.bib_number} - #{registrant}
%hr

%table.standard_skill_routine_judging_table
  %thead
    %tr
      %th.narrow_column{ rowspan: 2 } #
      %th.narrow_column{ rowspan: 2 } Skill
      %th.narrow_column{ rowspan: 2 } Description
      %th.narrow_column{ rowspan: 2 } Points
      %th{ colspan: 2 } Difficulty
      %th{ colspan: 4 } Execution
    %tr
      %th 50%
      %th 100%
      %th ~
      %th /
      %th +
      %th 0
  %tbody
    - @standard_skill_routine.standard_skill_routine_entries.each do |skill_entry|
      %tr{ class: skill_entry.standard_skill_entry.skill_speed_class }
        %td.narrow_column= skill_entry.position
        %td.narrow_column= skill_entry.standard_skill_entry.skill_number_and_letter
        %td.narrow_column= skill_entry.standard_skill_entry.description
        %td.narrow_column= skill_entry.standard_skill_entry.points
        %td
        %td
        %td
        %td
        %td
        %td
  %tfoot
    %tr
      %td{ colspan: 2}
      %td Total
      %th= @standard_skill_routine.total_skill_points
      %td
      %td
      %td
      %td
      %td
      %td
      %br

%br
%table.standard_skill_routine_judging_table
  %thead
    %tr
      %th Difficulty Judge
      %th Execution Judge
      %th Writing Judge
      %th Chief Judge
  %tbody
    %tr.judge_name_entry
      %td
      %td
      %td
      %td

= render "legend"
