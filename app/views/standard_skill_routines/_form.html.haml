- # passed in variable named 'form'
= simple_form_for([@standard_skill_routine, form], :remote => true) do |f|
  = render :partial => "/shared/error_messages", :object => form
  %span#errors
  .row
    .small-4.columns
      = f.label :position, t(".insert_at_position")
      %br
      = f.number_field :position, { :min => 1, :max => 18 }
    .small-8.columns
      = f.label :standard_skill_entry_id, t(".skill")
      %br
      = f.select :standard_skill_entry_id, StandardSkillEntry.all.map{ |ent| [ent, ent.id]}, {}, class: "chosen-select"
  .actions
    = f.button :submit, t(".insert_new"), data: { disable_with: false }
