%h1 Standard Skill Judging Sheet - Competitor Copy
- registrant = @standard_skill_routine.registrant
%h2 #{registrant.bib_number} - #{registrant}
%hr

%table.standard_skill_routine_competitor_sheet_table
  %thead
    %tr
      %th #
      %th Skill
      %th.description Description
      %th Points
      %th Skill Definition
  %tbody
    - @entries.each do |skill_entry|
      - skill = skill_entry.standard_skill_entry
      %tr
        %td= skill_entry.position
        %td= skill.skill_number_and_letter
        %td
          - if skill.skill_before
            %div= "** " + skill.skill_before.to_s + " **"

          - if skill.skill_before || skill.skill_after
            %b= skill.description
          - else
            = skill.description

          - if skill.skill_after
            %div= "** " + skill.skill_after.to_s + " **"
        %td= skill.points
        %td= skill.friendly_description
  %tfoot
    %tr
      %td{ colspan: 2}
      %th Total
      %th= @total
      %td
