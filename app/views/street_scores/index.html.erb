<h1>Event: <%=@competition.name %> - Street Scores</h1>
<h2>Judge: <%=@judge %></h2>

<%= render :partial => 'form' %>

<hr class="competitor_separator" />

<% unless @street_scores.empty? %>
    <table class="top_distance_attempts">
        <caption>Street Scores</caption>
        <thead>
            <tr>
                <th>ID</th>
                <th>Competitor</th>
                <th>Entered Points</th>
                <th class="derived">Judged Place</th>
                <th class="derived">Judged Points</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
    <% @street_scores.each do |ss| %>
        <% if ss.new_record?
               next
           end %>
        <tr>
            <td><%= ss.competitor.bib_number %></td>
            <td><%= ss.competitor.name %></td>
            <td><%= ss.val_1 %></td>
            <td class="derived"><%= ss.judged_place %></td>
            <td class="derived"><%= ss.placing_points %></td>
            <td><%= link_to 'Delete', judge_street_score_path(@judge, ss), data: { confirm: 'Are you sure?' }, method: :delete %></td>
        </tr>
    <% end %>
        </tbody>
    </table>
<% end %>
