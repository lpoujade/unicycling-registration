- content_for :content do
  = yield

  - unless EventConfiguration.singleton.under_construction?
    %hr
    - if user_signed_in?
      = link_to t(".manage_my_registrations"), user_registrants_path(current_user), class: "button"
    - else
      = t(".begin_registration_link", convention_name: @config.short_name)

      = link_to t(".sign_in"), new_user_session_path, class: "button"

= render template: "layouts/application"
