<% unless @competitor.nil? %>
    <div>
        <div class="competitor_details">
            <span>ID: <%= @competitor.bib_number %></span>
            <span>Name: <%= @competitor.name %></span>
            <span>Age: <%= @competitor.age %></span>
            <span>Gender: <%= @competitor.gender %></span>
            <span class="status <%= @competitor.distance_attempt_status_code %>"><%= @competitor.distance_attempt_status %></span>
        </div>
    </div>
    <br />

    <div class="distance_attempt_inputs">
      <%= render :partial => "/shared/error_messages", :object => @distance_attempt %>
      <%= form_for(@distance_attempt, :url => judge_competitor_distance_attempts_path(@judge, @competitor)) do |f| %>
        <%= f.label :distance, :class => "distance_label" %>
          <%= f.number_field :distance, :class => "distance_input", :autofocus => true, :autocomplete => 'off', :required => true %>
          <br />
          <%= f.label :fault, :class => "distance_fault_label" %>
          <%= f.check_box :fault, :class => "distance_input" %>
          <br />
          <%= f.submit "Add Attempt", {:class => 'add_distance_attempt_button'} %>
        <% end %>
    </div>
<% end %>
