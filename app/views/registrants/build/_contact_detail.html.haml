        = render "/registrants/build/contact_detail/team_affiliation", f: f
      .small-12.large-6.columns
        = render "/registrants/build/contact_detail/emergency_contact", f: f
      .small-12.large-6.columns
        = render "/registrants/build/contact_detail/responsible_adult", f: f
