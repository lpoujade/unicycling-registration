- cache [I18n.locale, @config, @registrant], expires_in: 1.hour do
  - if @registrant.competitor && (@registrant.songs.count > 0 || !@config.music_submission_ended?)
    .registrant_data_group.non_printable
      %fieldset.data_block
        - cache ['songs_menu', I18n.locale, @config, @registrant] do
          %legend= t(".header")
          %table
            %thead
              %tr
                %th= t(".event")
                %th= t(".song")
            %tbody
              - @registrant.songs.includes(:event).each do |song|
                %tr
                  %td= song.event
                  %td= song.description
        - if can? :create, Song
          .non_printable
            = t(".instructions")
            = link_to t(".click_here"), registrant_songs_path(@registrant)
