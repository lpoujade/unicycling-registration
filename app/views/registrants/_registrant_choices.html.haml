- use_wizard = true

.pricing_options
  - reg_period = RegistrationPeriod.current_period
  - if reg_period && reg_period.competitor_expense_item
    .pricing_option.recommended.competitor_sign_up
      %h3.recommended_title= t('.recommended')
      %h3.title= t('competitor')
      .current_price= print_formatted_currency(reg_period.competitor_expense_item.cost)
      .price_note Prices Increase in #{distance_of_time_in_words(DateTime.now, reg_period.end_date) }
      %ul.price_details
        %li.highlighted Compete in all events
        %li Participate in Workshops
        %li Buy T-Shirts
        %li Buy Dinner Tickets
        %li Support the Unicycling community
      - if use_wizard
        = link_to t(".create_new_competitor"), user_registrant_build_index_path(user_id: @user, registrant_id: "building", registrant_type: 'competitor'), :class => "competitor registration_button", method: :post
      - else
        = link_to t(".create_new_competitor"), new_registrant_path(registrant_type: 'competitor'), :class => "competitor registration_button"
  - if reg_period && reg_period.noncompetitor_expense_item
    .pricing_option.non-competitor_sign_up
      %h3.title= t('noncompetitor')
      .current_price= print_formatted_currency(reg_period.noncompetitor_expense_item.cost)
      .price_note Prices Increase in #{distance_of_time_in_words(DateTime.now, reg_period.end_date) }
      %ul.price_details
        %li -
        %li.highlighted Participate in Workshops
        %li Buy T-Shirts
        %li Buy Dinner Tickets
        %li Support the Unicycling community
      - if use_wizard
        = link_to t(".create_new_noncompetitor"), user_registrant_build_index_path(user_id: @user, registrant_id: "building", registrant_type: 'noncompetitor'), :class => "noncompetitor registration_button", method: :post
      - else
        = link_to t(".create_new_noncompetitor"), new_registrant_path(registrant_type: 'noncompetitor'), :class => "noncompetitor registration_button"
  - if @config.spectators
    .pricing_option.spectator_sign_up
      %h3.title= t('spectator')
      .current_price $0
      .price_note &nbsp;
      %ul.price_details
        %li -
        %li -
        %li Buy T-Shirts
        %li Buy Dinner Tickets
        %li Support the Unicycling community
      - if use_wizard
        = link_to t(".create_new_spectator"), user_registrant_build_index_path(user_id: @user, registrant_id: "building", registrant_type: 'spectator'), :class => "spectator registration_button", method: :post
      - else
        = link_to t(".create_new_spectator"), new_registrant_path(registrant_type: 'spectator'), :class => "spectator registration_button"
