.pricing_options
  .pricing_option.recommended.competitor_sign_up
    %h3.recommended_title= t('.recommended')
    %h3.title= t('competitor')
    - reg_cost = RegistrationCost.for_type("competitor").current_period
    - if reg_cost && reg_cost.expense_item
      .current_price= print_formatted_currency(reg_cost.expense_item.cost)
      .price_note= print_time_until_prices_increase(reg_cost)
    %ul.price_details
      - EventConfiguration.singleton.competitor_benefits_list.each do |item|
        %li= item
    = link_to t(".create_new_competitor"), "#", class: "js--display_new_registrant competitor_button", data: { registrant_type: 'competitor' }

  - if @config.noncompetitors?
    .pricing_option.non-competitor_sign_up
      %h3.title= t('noncompetitor')
      - reg_cost = RegistrationCost.for_type("noncompetitor").current_period
      - if reg_cost && reg_cost.expense_item
        .current_price= print_formatted_currency(reg_cost.expense_item.cost)
        .price_note= print_time_until_prices_increase(reg_cost)
      %ul.price_details
        - EventConfiguration.singleton.noncompetitor_benefits_list.each do |item|
          %li= item
      = link_to t(".create_new_noncompetitor"), "#", class: "js--display_new_registrant noncompetitor_button", data: { registrant_type: 'noncompetitor' }

  - if @config.spectators?
    .pricing_option.spectator_sign_up
      %h3.title= t('spectator')
      .current_price= print_formatted_currency(0)
      .price_note &nbsp;
      %ul.price_details
        - EventConfiguration.singleton.spectator_benefits_list.each do |item|
          %li= item
      = link_to t(".create_new_spectator"), "#", class: "js--display_new_registrant spectator_button", data: { registrant_type: 'spectator' }

.row.display_new_registrant.is--hidden
  .small-12.columns
    %fieldset
      .competitor_show
        .row
          .small-12.columns
            = link_to "Copy from previous convention", new_registrant_path(registrant_type: "competitor", copy_from_previous: true), class: "button"
            = link_to "Create new Competitor", new_registrant_path(registrant_type: "competitor", copy_from_previous: false), class: "button"
      .noncompetitor_show
        .row
          .small-12.columns
            = link_to "Copy from previous convention", new_registrant_path(registrant_type: "noncompetitor", copy_from_previous: true), class: "button"
            = link_to "Create new Non-Competitor", new_registrant_path(registrant_type: "noncompetitor", copy_from_previous: false), class: "button"
      .spectator_show
        .row
          .small-12.columns
            = link_to "Copy from previous convention", new_registrant_path(registrant_type: "spectator", copy_from_previous: true), class: "button"
            = link_to "Create new Spectator", new_registrant_path(registrant_type: "spectator", copy_from_previous: false), class: "button"

      = link_to t("cancel"), "#", class: "js--hide_new_registrant"
