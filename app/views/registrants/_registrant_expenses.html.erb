<fieldset class="data_block">
  <legend>Expenses</legend>
  <table>
    <thead>
      <tr>
        <th>Item</th>
        <th>Cost</th>
      </tr>
    </thead>

    <tbody>
      <% @registrant.all_expense_items.each do |item| %>
        <tr>
          <td><%= item %></td>
          <td>
            <span class="fee"><%= fcost(item.cost) %></span>
          </td>
        </tr>
      <% end %>
      <tr>
        <th>Subtotal</th>
        <th>
          <span class="fee"><%= fcost(@registrant.expenses_total) %></span>
        </th>
      </tr>
    </tbody>
  </table>
</fieldset>
