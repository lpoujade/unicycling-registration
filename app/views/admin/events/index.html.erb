<h1>Events Report</h1>

<table>
  <caption>Overview</caption>
  <tr>
    <th>Competitors</th>
    <td><%= @num_competitors %></td>
  </tr>
  <tr>
    <th>Non-Competitors</th>
    <td><%= @num_non_competitors %></td>
  </tr>
  <tr>
    <th>Total Registrations</th>
    <td><b><%= @num_registrants %></b></td>
  </tr>
    <tr>
    </tr>
  </tbody>
</table>

<hr />

<table class="alternate">
  <caption>Event-Competitor-Breakdown</caption>
  <thead>
    <th>Category</th>
    <th>Event Name</th>
    <th>Sign Up List</th>
    <th>Event Category</th>
    <th># Signed Up</th>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <% new_event = true %>
      <% event.event_categories.each do |ecat| %>
        <tr>
          <% if new_event %>
            <td><%= event.category %></td>
            <td><%= event %></td>
            <% new_event = false %>
            <td>
              <%= link_to "HTML", admin_event_path(event) %>
              <%= link_to "PDF", admin_event_path(event, :format => "pdf") %>
            </td>
          <% else %>
            <td colspan="3"></td>
          <% end %>
          <td><%= ecat %></td>
          <td><%= ecat.num_competitors %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
