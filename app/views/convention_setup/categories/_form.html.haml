= form_for([:convention_setup, @category]) do |f|
  - if @category.errors.any?
    #error_explanation
      %h2
        = pluralize(@category.errors.count, "error")
        prohibited this category from being saved:
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg
  %div
    %table.category_form
      - languages.each do |lang|
        = f.globalize_fields_for lang do |g|
          %tr
            %td
              = g.label :name
              (#{long_language_name(lang)})
            %td= g.text_field :name
      %tr
        %td= f.label :position
        %td= f.number_field :position
      %tr
        %td= f.label :info_url
        %td= f.url_field :info_url
      %tr
        %td.center{:colspan => "2"}= f.submit
