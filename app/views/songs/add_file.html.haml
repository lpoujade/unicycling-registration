%h1= t(".title")
%h3
  = Event.model_name.human
  #{@song.event} - #{@song.description}
%fieldset.wizard.wizard_other_step
  %legend= t(".step_1")
  = t(".step_1_description")

%fieldset.wizard
  %legend= t(".step_2")
  = t(".upload_music_file")

  = form_for :song_file, url: file_complete_song_path(@song), method: :put do |f|
    %small
      %b= t(".note")
      = t(".max_file_size", size_mb: 40)
      %br
    = f.file_field :song_file_name
    = f.submit t(".upload"), class: "button"
%br
= link_to t("back"), registrant_songs_path(@song.registrant)

%hr
= link_to "#{@song.registrant} Summary", registrant_path(@song.registrant), class: "button secondary"
