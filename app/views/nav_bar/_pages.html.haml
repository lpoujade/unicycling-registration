- cache_i18n ['pages', Page] do
  - Page.ordinary.parent_or_single.ordered.each do |page|
    - if page.parent?
      %li
        %a{href: "#"}= page.title
        %ul.menu.vertical
          %li
            = link_to page.title, page_path(page.slug)
          - page.children.ordered.each do |page|
            %li
              = link_to page.title, page_path(page.slug)
    - else
      %li= link_to page.title, page_path(page.slug)
