
<h1><%= @competition %></h1>
<h2>New lane_assignment</h2>
<%= render 'form' %>

<h2>Lane Assignments </h2>
<table class="sortable">
  <thead>
    <tr>
      <th>Competition</th>
      <th>ID</th>
      <th>Competitor</th>
      <th>Heat</th>
      <th>Lane</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lane_assignments.each do |lane_assignment| %>
      <tr>
        <td><%= lane_assignment.competition %></td>
        <td><%= lane_assignment.competitor.bib_number %></td>
        <td><%= lane_assignment.competitor %></td>
        <td><%= lane_assignment.heat %></td>
        <td><%= lane_assignment.lane %></td>
        <td><%= link_to 'Edit', edit_lane_assignment_path(lane_assignment) %></td>
        <td><%= link_to 'Destroy', lane_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
