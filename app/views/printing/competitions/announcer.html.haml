%h2= "#{@competition} Competitors"

%table.full_grid.sortable
  %thead
    %tr
      - if @competition.compete_in_order
        %th Order
      %th ID
      %th Name
      %th Club
      - if @config.usa?
        %th State
      - else
        %th Country
  %tbody
    - @competition.competitors.active.each do |comp|
      %tr
        - if @competition.compete_in_order
          %td= comp.position
        %td= comp.bib_number
        %td= comp
        %td= comp.club
        - if @config.usa?
          %td= comp.state
        - else
          %td= comp.country
