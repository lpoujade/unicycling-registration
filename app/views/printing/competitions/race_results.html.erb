<div class="race_recording">
  <% @age_group_entries.each do |ag_entry| %>
    <% next if @results_list[ag_entry].size == 0 %>
    <div class="nobreak">
      <h1>Race Results</h1>
      <hr />
      <h2><%= @competition %></h2>
      <hr />
      <h2 class="age_group_description"><%= ag_entry %></h2>
      <h2 class="age_group_gender"><%= ag_entry.gender %></h2>
      <div style="clear: both"></div>
      <hr />

      <table class="full results race">
        <thead>
          <tr>
            <th class="id">ID</th>
            <th class="name">Name</th>
            <th class="time">Time</th>
            <th class="place">Place</th>
          </tr>
        </thead>
        <tbody>
          <% @results_list[ag_entry].each do |tr| %>
            <%= render :partial => "result_entry", :locals => {:id => tr.competitor.external_id, :name => tr.competitor.to_s, :time => tr.full_time, :place => tr.place } %>
          <% end %>
        </tbody>
      </table>
      <% if @no_page_breaks %>
        <hr class="age_group_separator" />
      <% else %>
        <div class="page-break"></div>
      <% end %>
    </div>
  <% end %>
</div>
