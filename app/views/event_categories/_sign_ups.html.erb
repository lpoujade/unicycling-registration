<table class="sortable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        <% @registrants.each do |reg| %>
          <% next if reg.nil? %>
            <tr>
                <td><%= reg.bib_number %></td>
                <td><%= reg %></td>
                <td><%= reg.age %></td>
                <td><%= reg.gender %></td>
                <td><%= reg.describe_event_hash(@event)[:additional] %></td>
            </tr>
        <% end %>
    </tbody>
</table>
