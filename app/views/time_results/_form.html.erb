<%= form_for(@time_result.new_record? ? [@time_result.competition, @time_result] : [@time_result]) do |f| %>
  <% if @time_result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@time_result.errors.count, "error") %> prohibited this time_result from being saved:</h2>

      <ul>
      <% @time_result.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table>
    <thead>
      <tr>
        <th><%= f.label :registrant_id %></th>
