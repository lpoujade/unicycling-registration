        <td>
          <%= f.number_field :minutes %>
        </td>
        <td>
          <%= f.number_field :seconds %>
        </td>
        <td>
          <%= f.number_field :thousands %>
        </td>
        <td>
          <%= f.check_box :disqualified %>
        </td>
