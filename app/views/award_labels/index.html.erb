<h1>Listing award_labels</h1>


<%= form_tag(normal_labels_user_award_labels_path(@user), {:method => :get}) do %>
  <%= label_tag :separate_registrants, "Separate each registrant with a row of blank labels" %>
  <%= check_box_tag :separate_registrants %><br />
  <%= submit_tag "Normal Labels", :class => "multiclick" %>
<% end %>

<%= link_to "Normal Labels", normal_labels_user_award_labels_path(@user) %>
<%= link_to "Expert Labels", expert_labels_user_award_labels_path(@user) %>

 <%= form_tag(create_labels_user_award_labels_path(@user), {:method => :post, :multipart=>true}) do %>
   <%= select_tag :competition_id, options_from_collection_for_select(Competition.order(:event_id, :name).all, "id", "to_s") %><br />

   <%= label_tag :maximum_place, "Maximum Award Place" %>
   <%= text_field_tag :maximum_place %><br />

   <%= label_tag :experts, "Experts from within Age-group data" %>
   <%= check_box_tag :experts %><br />

   <%= submit_tag "Create labels" %>
 <% end %>
 <hr />

 <h2>Create Labels For a specific Registrant/Registrant-Group</h2>
 <%= form_tag(create_labels_by_registrant_user_award_labels_path(@user), {:method => :post}) do %>
   <%= label_tag :registrant_id, "Single Registrant" %>
   <%= select_tag :registrant_id, options_from_collection_for_select(Registrant.order(:bib_number).all, "id", "with_id_to_s"), :include_blank => true %><br />

   <%= label_tag :registrant_group_id, "Registrant Group" %>
   <%= select_tag :registrant_group_id, options_from_collection_for_select(RegistrantGroup.order(:name).all, "id", "to_s"), :include_blank => true %><br />

   <%= submit_tag "Create Labels for Selected Registrant(s)" %>
 <% end %>

 <hr />


 <%= form_tag(destroy_all_user_award_labels_path(@user), {:method => :delete, :multipart=>true}) do %>
   <%= submit_tag "Clear Table", :confirm => "DELETE. Are you sure?", :class => "awards_delete"  %>
 <% end %>

<table class="sortable">
  <thead>
    <tr>
      <th>Bib number</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Partner first name</th>
      <th>Partner last name</th>
      <th>Competition name</th>
      <th>Team name</th>
      <th>Age group</th>
      <th>Gender</th>
      <th>Details</th>
      <th>Place</th>
      <th>Registrant</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @award_labels.each do |award_label| %>
      <tr>
        <td><%= award_label.bib_number %></td>
        <td><%= award_label.first_name %></td>
        <td><%= award_label.last_name %></td>
        <td><%= award_label.partner_first_name %></td>
        <td><%= award_label.partner_last_name %></td>
        <td><%= award_label.competition_name %></td>
        <td><%= award_label.team_name %></td>
        <td><%= award_label.age_group %></td>
        <td><%= award_label.gender %></td>
        <td><%= award_label.details %></td>
        <td><%= award_label.place %></td>
        <td><%= award_label.registrant %></td>
        <td><%= link_to 'Edit', edit_award_label_path(award_label) %></td>
        <td><%= link_to 'Destroy', award_label, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

