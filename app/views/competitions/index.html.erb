<h1>Listing Competitions for <%= @event %></h1>


<div class="configuration_settings_block">
  <table>
    <tr>
      <th>Competition Name</th>
      <th># Competitors</th>
      <th>Locked?</th>
      <th>Judges</th>
      <th colspan="3"></th>
    </tr>

    <% @competitions.each do |competition| %>
      <tr>
        <td><%= competition %></td>
        <td><%= competition.competitors.count %></td>
        <td><%= competition.locked? %></td>
        <td><%= link_to "JUdges", competition_judges_path(competition) %></td>
        <td><%= link_to 'Show', competition %></td>
        <td><%= link_to 'Edit', edit_competition_path(competition) %></td>
        <td><%= link_to 'Destroy', competition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
</div>

<div class="configuration_new_entry_form">
  <h3>New competition</h3>
  <%= render 'form' %>
</div>
